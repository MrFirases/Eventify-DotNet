@using Eventify.Data.Models
@using Eventify.Web.Utils
<li class="dropdown dropdown-extended dropdown-notification" id="header_notification_bar">
    
    @if (@Session["MyNotifications"] != null)
    {
        
    
    <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
        <i class="icon-bell"></i>
        <span class="badge badge-default"> @Session["MyNotificationsNB"]</span>
    </a>
        <ul class="dropdown-menu">
            <li class="external">
                <h3>
                    <span class="bold">@Session["MyNotificationsNB"] new</span> notifications
                </h3>
                <a href="page_user_profile_1.html">view all</a>
            </li>
            <li>
                <ul class="dropdown-menu-list scroller" style="height: 250px;" data-handle-color="#637283">
                    @foreach (var item in (IEnumerable<Notification>) @Session["MyNotifications"])
                    {

                        <li>
                            <a href="javascript:;">
                                <span class="time">
                            @DateFormat.GetPrettyDate(DateTime.Today)
                                    @*@{
                                        long unixDate = (long) @item.notificationDate;
                                        DateTime start = new DateTime(1970, 1, 1, 0, 0, 0, DateTimeKind.Local);
                                        DateTime date = start.AddMilliseconds(unixDate).ToLocalTime();
                                    }
                                    @DateFormat.GetPrettyDate(date)*@

                                    
                            
                        </span>
                                <span class="details">
                            <span class="label label-sm label-icon label-warning">
                                <i class="fa fa-bell-o"></i>
                            </span> @item.notificationTitle
                        </span>
                            </a>
                        </li>
                    }

                </ul>
            </li>
        </ul>
    }
</li>