@model Eventify.Data.Models.Organization

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>Details Organization</title>
<h2>Details</h2>

<div  style="width:500px;float:left">
    <h4>Organization</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
                Creation Date :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.creationDate)
        </dd>

        <dt>
            Organization Name :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.organizationName)
        </dd>

        <dt>
           Organization Type :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.organizationType)
        </dd>

        <dt>
          Creator Name :
        </dt>

        <dd>
           
               @Html.ViewBag.User.firstName @Html.ViewBag.User.lastName
        </dd>

    </dl>
</div>
    
    <div  style="float:right; width:700px;margin-right:50px">
        <h2>All events Created by @Html.DisplayFor(model => model.organizationName) </h2>
        <table class="table table-striped table-bordered table-hover table-checkable order-column dataTable no-footer">

                <tr>
                 
                    <th> Title</th>
                    <th> Theme </th>
                    <th> Event Type </th>
                    <th> Creation Date </th>
                    <th> Event State </th>
                </tr>
                <tbody>
            @foreach (var events in ViewBag.Event)
            {
                 
                    <tr class="odd gradeX">
                   
                        <td> @events.title </td> 
                        <td>
                            @events.theme
                        </td>
                        <td>
                            @events.eventType
                        </td>
                        <td class="center">
                        @events.createdAt
                        </td>
                        <td>
                            <span class="label label-sm label-warning"> @events.eventState</span>
                        </td>
                    </tr>
            }
                </tbody>
            
       

        </table>
    </div>
<div style="margin-top:200px;padding-top:100px">
    
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn sbold green" })
   
</div>

