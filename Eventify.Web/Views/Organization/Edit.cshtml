@model Eventify.Data.Models.Organization

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Edit Organizatios</title>
<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Organization</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group" style="width:750px">
            @Html.LabelFor(model => model.creationDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.creationDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.creationDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="width:750px">
            @Html.LabelFor(model => model.organizationName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.organizationName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.organizationName, "", new { @class = "text-danger" })
            </div>
        </div>

        @{ 
            string type = @Html.DisplayFor(model => model.organizationType).ToString();

        }
        <div>

           
           <div class="form-group form-md-radios has-success" style="margin-left:100px">
                <label for="form_control_1">Organization Type</label>
                <div class="md-radio-list">

                    @if (@type == "MORALE")
                    {
                        <div class="md-radio">

                            <input checked="" id="checkbox2_6" name="organizationType" type="radio" value="MORALE" class="md-radiobtn">
                            <label for="checkbox2_6">
                                <span></span>
                                <span class="check"></span>
                                <span class="box"></span> MORALE
                            </label>
                        </div>
                        <div class="md-radio">

                            <input  id="checkbox2_7" name="organizationType" type="radio" value="PHYSIQUE" class="md-radiobtn">

                            <label for="checkbox2_7">
                                <span></span>
                                <span class="check"></span>
                                <span class="box"></span> PHYSIQUE
                            </label>
                        </div>
                    }
                    else if (@type == "PHYSIQUE")
                    {
                        <div class="md-radio">

                            <input id="checkbox2_6" name="organizationType" type="radio" value="MORALE" class="md-radiobtn">
                            <label for="checkbox2_6">
                                <span></span>
                                <span class="check"></span>
                                <span class="box"></span> MORALE
                            </label>
                        </div>
                        <div class="md-radio">

                            <input checked="" id="checkbox2_7" name="organizationType" type="radio" value="PHYSIQUE" class="md-radiobtn">

                            <label for="checkbox2_7">
                                <span></span>
                                <span class="check"></span>
                                <span class="box"></span> PHYSIQUE
                            </label>
                        </div>
                    }

               
                </div>
            </div>
      
          </div>
         
        <div class="form-group"style="width:650px"> 
            <div class="col-md-offset-2 col-md-10"> 
                <input type="submit" value="Save" class="btn blue mt-ladda-btn ladda-button btn-outline"style="margin-left:550px"/> 
            </div>
        </div>
    </div>
            }

<div>
    @Html.ActionLink("Back to List", "Index",null,new { @class="btn btn-danger"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
