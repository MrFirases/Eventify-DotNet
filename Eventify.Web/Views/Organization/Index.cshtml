@model IEnumerable<Eventify.Data.Models.Organization>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>Display Organization</title>
<h2>Display all Organizations </h2>




<div class="col-md-7">
    @using (Html.BeginForm())
    {
        <div class="input-group">


            <input type="text" class="form-control" name="searchString" placeholder="Search for...">

            <span class="input-group-btn">
                <button class="btn blue uppercase bold" type="submit" id="submitId">Search</button>s
            </span>

        </div>
    }
</div>

   <br /> <br /> <br /> <br />

@if (Model != null)
{ foreach (var item in Model)
    {
<div class="col-md-6">
    <!-- BEGIN Portlet PORTLET      rgb(48, 63, 93);-->
    <div class="portlet light"style="border-color:rgba(53, 197, 14, 0.33); border:outset">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-speech"></i>
                <span class="caption-subject bold uppercase"> @Html.DisplayFor(modelItem => item.organizationName)</span>
                <span class="caption-helper">@Html.DisplayFor(modelItem => item.creationDate)</span>
            </div>
            <div class="actions">

                @Html.ActionLink("Edit", "Edit", "Organization", new { item.id }, new { @class = "fa fa-pencil btn btn-circle btn-default" })

     
                     @Html.ActionLink("Details", "Details", "Organization",  new {  item.id }, new { @class = "fa fa-plus btn btn-circle btn-default" })
                                     
                <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;"> </a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="scroller" style="height:200px" data-rail-visible="1" data-rail-color="yellow" data-handle-color="#a1b2bd">


                <h4>

                    @foreach (var users in ViewBag.User)
                    {

                        if (item.user_id == users.id)
                            {
                            <h3>Name of creator :</h3>  @users.firstName <html></html> @users.lastName
                            }
                       
                    }
                    
    </h4>
               <div>
               @if (item.organizationType == "MORALE")
               {
                <h3>Type of organization :</h3> <span class="label label-sm label-success">@Html.DisplayFor(modelItem => item.organizationType)</span>
               }
               else
               {
                   <h3>Type of organization :</h3><span class="label label-sm label-warning">@Html.DisplayFor(modelItem => item.organizationType)</span>
               }
               </div>
       
            </div>
        </div>
    </div>
    <!-- END Portlet PORTLET-->
</div>

}}
