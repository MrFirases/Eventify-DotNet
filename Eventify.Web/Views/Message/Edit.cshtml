@model Eventify.Data.Models.Message

@{
    ViewBag.Title = "Edit";
}

<h2>Edit message : </h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form">
        <h4>@Model.user.firstName @Model.user.lastName</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        
        
        <div class="form-group form-md-line-input has-success">
            <label class="col-md-2 control-label" for="form_control_1">Response : </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.message1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.message1, "", new { @class = "text-danger" })
                <div class="form-control-focus"> </div>
            </div>
        </div>

        <br/>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn green-haze btn-outline sbold uppercase" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "Message")" class="btn default m-icon">
        Back
        <i class="m-icon-swapleft"></i>
    </a>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
